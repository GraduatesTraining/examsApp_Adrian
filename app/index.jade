  body
    .row.header
      img.img-responsive.center-block.logo(src="images/cognizantLogo.png")
    .container.containerLogin
      .container.jumbotron.containerLogin2
        form(name="loginForm" ng-controller="FormLoginCtrl as formLogin")
          // Login fields
          label User:
          input.form-control(type="text" placeholder="username or email" ng-model="user" required)
          br
          label Password:
          input.form-control(type="password" placeholder="password" ng-model="password" required)
          br
          // Register fields
          div(ng-show="formLogin.regFields")
            label Name
            input.form-control(type="text" placeholder="Name" ng-model="name" required)
            br
            label Surname
            input.form-control(type="text" placeholder="Surname" ng-model="surname" required)
          br
          br
          // Login and register buttons
          .row(ng-hide="formLogin.regFields")
            .col-sm-6.text-center
              button.btn.btn-primary.btnLogin(type="button" ng-click="formLogin.login(user,password)") LOGIN
            .col-sm-6.text-center
              button.btn.btn-success.btnLogin(type="button" ng-click="formLogin.goRegister()") REGISTER
          .row.text-center(ng-show="formLogin.regFields")
              button.btn.btn-success.btnLogin(type="button" ng-click="formLogin.register(user,password,name,surname)" ng-disabled="!loginForm.$valid") REGISTER
          br
          br
          // Login failed message
          .alert.alert-danger.text-center(ng-show="formLogin.loginError") Login failed, email or password incorrect
           // Register failed message
          .alert.alert-danger.text-center(ng-show="formLogin.registerError") This username exist. Choose another one
